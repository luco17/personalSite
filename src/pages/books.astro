---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
const allBooks = await getCollection("books");
---

<Layout title="LOD - Books">
  <main>
    <h2>Books</h2>
    <p>
      A list of books I've read since 2021. I've linked to the books I've written notes on.
    </p>
    <hr />
    <ul>
      {
        allBooks.map((book) => (
          <li>
            {book.data.link ? (
              <a href={`/books/${book.slug}/`}>{book.data.title}</a><span class="author"> - {book.data.author}</span>
            ) : (
              <span>{book.data.title} - </span><span class="author">{book.data.author}</span>
            )}
          </li>
        ))
      }
    </ul>
  </main>
</Layout>

<style>
  ul {
    padding-left: 1rem;
  }

  li {
    padding: 4px 0;
  }

  .author {
    font-size: 0.8rem;
    color:darkslategrey;
  }
</style>
