---
import Nav from "../components/Nav.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Welcome! I hope you find something of interest here. Lucien"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/weaselOg.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script defer data-domain="lcod.uk" src="https://plausible.io/js/script.js"
    ></script>
  </head>
  <body>
    <Nav />
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family: system-ui, sans-serif;
    /* background: #13151a; */
  }

  p {
    line-height: 1.3em;
  }

  blockquote {
    background: #f9f9f9;
    border-left: 4px solid #ccc;
    margin: 1.5em 10px;
    padding: 0.5em 10px;
  }

  @media (prefers-color-scheme: dark) {
    html {
      background-color: #111111;
      color: #fff;
    }

    a {
      color: lightskyblue;
    }

    a:hover {
      color: lightseagreen;
    }

    blockquote {
      background: #222222;
      border-left: 10px solid #444444;
    }
  }

  body {
    margin: auto;
    padding: 1rem;
    max-width: 600px;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  blockquote p {
    display: inline;
    font-style: italic;
  }
</style>
